{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch DotNetLiguria Web API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/dotnetliguriawebsite/DotNetLiguriaCore/bin/Debug/net9.0/DotNetLiguriaCore.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/dotnetliguriawebsite/DotNetLiguriaCore",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Launch DotNetLiguria Web API (No Browser)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/dotnetliguriawebsite/DotNetLiguriaCore/bin/Debug/net9.0/DotNetLiguriaCore.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/dotnetliguriawebsite/DotNetLiguriaCore",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Launch DataMigration",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-datamigration",
            "program": "${workspaceFolder}/src/dotnetliguriawebsite/DataMigration/bin/Debug/net9.0/DataMigration.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/dotnetliguriawebsite/DataMigration",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        }
    ]
}